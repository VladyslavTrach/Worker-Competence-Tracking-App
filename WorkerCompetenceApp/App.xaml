                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#008000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        
       
        
        
        

        
